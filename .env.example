# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Restaurant Dashboard"
NEXT_PUBLIC_APP_DESCRIPTION="Modern Restaurant Management System"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/restaurant_db"
DATABASE_POOL_SIZE=10

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here-min-32-chars
AUTH_TRUST_HOST=true

# Security
CSRF_SECRET=your-csrf-secret-key-here-min-32-chars
ENCRYPTION_KEY=your-encryption-key-here-min-32-chars
SESSION_SECRET=your-session-secret-key-here-min-32-chars
JWT_SECRET=your-jwt-secret-key-here-min-32-chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL_SECONDS=3600

# Email Service
EMAIL_FROM=noreply@restaurant.com
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-specific-password

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# POS System Integration
POS_ADAPTER=square
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_LOCATION_ID=your-square-location-id
TOAST_API_KEY=your-toast-api-key
TOAST_RESTAURANT_GUID=your-toast-restaurant-guid

# Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=restaurant-assets

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Feature Flags
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_AI_INSIGHTS=false

# Development
ANALYZE_BUNDLE=false
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Third-party APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENWEATHER_API_KEY=your-openweather-api-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=restaurant-backups

# Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-api-key

# WebAuthn/Passkeys
WEBAUTHN_RP_NAME="Restaurant Dashboard"
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000